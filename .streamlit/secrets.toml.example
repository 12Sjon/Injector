# Streamlit Secrets Template
# Copy this to secrets.toml and fill in your actual values
# This file is used for Streamlit Cloud deployment

[general]
app_name = "Resume Customizer"
debug = false

[email]
# Default SMTP settings (optional)
default_smtp_server = "smtp.gmail.com"
default_smtp_port = 465

[performance]
max_workers = 4
batch_size = 10

# Note: Do not put actual email credentials here
# Users should enter their credentials through the UI for security
