# Environment variables template for Resume Customizer App
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Resume Customizer"
DEBUG=false
MAX_UPLOAD_SIZE=200

# Default Email Configuration (Optional - users can still input manually)
DEFAULT_SMTP_SERVER=smtp.gmail.com
DEFAULT_SMTP_PORT=465

# Security Settings
ENABLE_CORS=false
ENABLE_XSRF_PROTECTION=false

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=10

# Logging
LOG_LEVEL=INFO

# Note: Individual email credentials should still be entered by users in the UI
# This is for security and privacy reasons
